<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp">

    <Button
        android:id="@+id/buttonPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/button_dialog_transparent"
        android:padding="5dp"
        android:text="@string/dialog_button_preview"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/button_dialog_transparent"
        android:padding="5dp"
        android:text="@string/dialog_button_advanced"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonNewImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/button_dialog_transparent"
        android:padding="5dp"
        android:text="@string/dialog_button_select_image"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonDeleteImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/button_dialog_transparent"
        android:padding="5dp"
        android:text="@string/dialog_button_delete_image"
        android:textAllCaps="false"
        android:textSize="24sp" />

</LinearLayout>
